@model BloggerSystem.CustomView.CommentArticleModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Article</h4>
    <hr />
    <dl class="dl-horizontal">
      
        <dt>
            @Html.DisplayNameFor(model => model.article.Address)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.article.Address)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.article.Context)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.article.Context)
        </dd>

       
    </dl>
</div>
<div class="container">
    <div class="col-lg-10">
        @if (Model != null)
        {
            <h3><b>Comments</b></h3>
            <table class="table">
                
                @foreach (var item in Model.commentList)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.Name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Context)
                        </td>
                    </tr>

                }


            </table>
        }@using (Html.BeginForm())
        {
                @Html.HiddenFor(m=>m.article.ArticleID)
                @Html.TextBoxFor(m => m.comment.Context, new { @class = "form-control"})
                @Html.ValidationMessageFor(m => m.comment.Context)
                <button type="submit" class="btn btn-success submit">Comment</button>
        }
    </div>
</div>
<br />
    <p>
        @Html.ActionLink("Back to Home", "Index","Home")
    </p>
