@model BloggerSystem.CustomView.CategoreyArticleModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.article.ArticleID)
    @Html.HiddenFor(model => model.article.UserID)
    <div class="form-group">
        @Html.LabelFor(m => m.article.Address)
        @Html.TextBoxFor(m => m.article.Address, new { @class = "form-control", Value = "" })
        @Html.ValidationMessageFor(m => m.article.Address)
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.article.Context)
        @Html.TextAreaFor(m => m.article.Context, new { @class = "form-control", Value = "" })
        @Html.ValidationMessageFor(m => m.article.Context)
    </div>

            <div class="form-group">
                @Html.LabelFor(m => m.article.CategoryID, "Category")
                @Html.DropDownListFor(m => m.article.CategoryID, new SelectList(Model.categoryList, "CategoryID", "TypeCategory"), "- select Category -", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.article.CategoryID)

            </div>

            <button type="submit" class="btn btn-success submit">Save</button>
}
<br />
<div class="form-actions no-color">
    @Html.ActionLink("Back to Controller", "contorolPanel", "User")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
